{
   "name": "node-template",
   "version": "1.0.0",
   "type": "module",
   "main": "main.ts",
   "scripts": {
      "build": "node esbuild.config.mjs",
      "start": "tsx src/main.ts",
      "prod": "node dist/main.js",
      "dev": "nodemon --watch \"src/**/*.{ts,js}\" --exec tsx src/main.ts",
      "format": "prettier --write .",
      "word:check": "cspell \"**\""
   },
   "author": "",
   "license": "ISC",
   "description": "",
   "dependencies": {
      "esbuild": "^0.27.0",
      "express": "^5.1.0",
      "typescript": "^5.9.3"
   },
   "devDependencies": {
      "@types/express": "^5.0.5",
      "@typescript-eslint/eslint-plugin": "^8.48.0",
      "@typescript-eslint/parser": "^8.48.0",
      "cspell": "^9.3.2",
      "eslint": "^9.39.1",
      "eslint-config-prettier": "^10.1.8",
      "eslint-plugin-prettier": "^5.5.4",
      "nodemon": "^3.1.11",
      "prettier": "^3.6.2",
      "tsx": "^4.20.6"
   }
}
